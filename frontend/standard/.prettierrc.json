{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.html", "**/*.css", "**/*.scss", "**/*.less"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": false,
  "bracketSameLine": true,
  "arrowParens": "always",
  "endOfLine": "lf"
}
